{
  "name": "react-boilerplate",
  "version": "0.0.1",
  "description": "A React Boilerplate",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --progress --colors --watch",
    "dev": "webpack-dev-server --progress --colors --hot --inline",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "author": "",
  "license": "ISC",
  "repository": {
    "url": "git@github.com:gregz67/react-boilerplate.git"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "dependencies": {
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.6.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.0",
    "eslint": "^3.12.2",
    "eslint-plugin-react": "^6.8.0",
    "jest": "^18.1.0",
    "postcss-loader": "^1.2.1",
    "react-addons-test-utils": "^15.3.2",
    "react-hot-loader": "^1.3.1",
    "react-test-renderer": "^15.3.2",
    "standard": "^8.6.0",
    "standard-loader": "^5.0.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  }
}
